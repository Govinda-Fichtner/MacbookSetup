# MCP Server Environment Variables
# Copy this file to .env and set your actual values

# GitHub MCP Server
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_personal_access_token_here

# CircleCI MCP Server
CIRCLECI_TOKEN=your_circleci_token_here
CIRCLECI_BASE_URL=https://circleci.com

# Filesystem MCP Server
FILESYSTEM_ALLOWED_DIRS=/path/to/your/projects,/path/to/other/projects

# Memory Service MCP Server
MCP_MEMORY_CHROMA_PATH=/path/to/chroma/data
MCP_MEMORY_BACKUPS_PATH=/path/to/memory/backups

# Kubernetes MCP Server
KUBECONFIG=/path/to/your/kubeconfig
K8S_NAMESPACE=default
K8S_CONTEXT=your_k8s_context

# Figma MCP Server
FIGMA_API_KEY=your_figma_api_key_here

# Heroku MCP Server
HEROKU_API_KEY=your_heroku_api_key_here

# Rails MCP Server
RAILS_MCP_ROOT_PATH=/path/to/your/rails/projects
RAILS_MCP_CONFIG_HOME=/path/to/rails/config

# Terraform-CLI-Controller MCP Server
TERRAFORM_HOST_DIR=/path/to/your/terraform/projects
